function startCar() {
    const frontWheel = document.querySelector('.front-wheel');
    const backWheel = document.querySelector('.back-wheel');
    const video = document.getElementById('car-video');

    // Iniciar la animaci√≥n de las ruedas
    frontWheel.style.animation = 'rotate 1s linear infinite';
    backWheel.style.animation = 'rotate 1s linear infinite';

    // Mostrar y reproducir el video
    video.style.display = 'block';
    video.play();
}
